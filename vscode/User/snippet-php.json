{
    /*
    	// Place your snippets for PHP here. Each snippet is defined under a snippet name and has a prefix, body and 
    	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
    	// same ids are connected.
    	// Example:
    	"Print to console": {
    		"prefix": "log",
    		"body": [
    			"console.log('$1');",
    			"$2"
    		],
    		"description": "Log output to console"
    	}
    */
    "public function": {
        "prefix": "pubf",
        "body": [
            "public function $1 ($2) { $3 }"
        ],
        "description": "Define public function"
    },

    "protected function": {
        "prefix": "prof",
        "body": [
            "protected function $1 ($2) { $3 }"
        ],
        "description": "Define protected function"
    },

    "private function": {
        "prefix": "prif",
        "body": [
            "private function $1 ($2) { $3 }"
        ],
        "description": "Define private function"
    },

    "public static function": {
        "prefix": "pubsf",
        "body": [
            "public static function $1 ($2) { $3 }"
        ],
        "description": "Define public static function"
    },

    "protected static function": {
        "prefix": "pubsf",
        "body": [
            "protected static function $1 ($2) { $3 }"
        ],
        "description": "Define protected static function"
    },

    "private static function": {
        "prefix": "prisf",
        "body": [
            "private static function $1 ($2) { $3 }"
        ],
        "description": "Define private static function"
    }
}